<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dogwalker">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/dog"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/dog"
        android:supportsRtl="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:hardwareAccelerated="false"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".RegisterWalkerActivity"
            android:windowSoftInputMode="adjustResize">
        </activity>
        <activity android:name=".DashboardActivity">
        </activity>
        <activity android:name=".WalkerOrderActivity"
            android:windowSoftInputMode="adjustPan|stateHidden">
        </activity>
        <activity android:name=".SinglePostActivity">
        </activity>
        <activity android:name=".MapsActivity">
        </activity>
        <activity android:name=".RegisterDogActivity"
            android:windowSoftInputMode="adjustPan|adjustResize">
        </activity>
        <activity android:name=".WalkerDashboardActivity"/>
        <activity android:name=".OrderDetailActivity"/>
        <service
            android:name=".service.DogWalkerService"
            android:exported="true"
            android:enabled="true">
        </service>
        <service
            android:name=".service.DogFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <receiver android:name=".receiver.AlarmReceiver"></receiver>
    </application>

</manifest>