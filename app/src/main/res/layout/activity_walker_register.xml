<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/walker_register_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:fontFamily="@font/delius"
                android:text="Register Walker"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/weight_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="32dp"
                android:ems="10"
                android:fontFamily="@font/delius"
                android:hint="Maksimal Berat Anjing"
                android:inputType="textPersonName"
                android:numeric="integer"
                android:textAlignment="center"
                app:layout_constraintStart_toEndOf="@+id/info_button_max_dog"
                app:layout_constraintTop_toBottomOf="@+id/walker_register_title" />

            <EditText
                android:id="@+id/max_distance_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:ems="10"
                android:fontFamily="@font/delius"
                android:hint="Maksimal Jarak"
                android:inputType="textPersonName"
                android:numeric="integer"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="@+id/weight_text"
                app:layout_constraintStart_toStartOf="@+id/weight_text"
                app:layout_constraintTop_toBottomOf="@+id/weight_text" />

            <EditText
                android:id="@+id/max_duration_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:ems="10"
                android:fontFamily="@font/delius"
                android:hint="Maksimal Durasi Jalan"
                android:inputType="textPersonName"
                android:numeric="decimal"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="@+id/max_distance_text"
                app:layout_constraintStart_toStartOf="@+id/max_distance_text"
                app:layout_constraintTop_toBottomOf="@+id/max_distance_text" />

            <EditText
                android:id="@+id/pricing_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:ems="10"
                android:fontFamily="@font/delius"
                android:hint="Harga"
                android:inputType="textPersonName"
                android:numeric="integer"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="@+id/max_duration_text"
                app:layout_constraintStart_toStartOf="@+id/max_duration_text"
                app:layout_constraintTop_toBottomOf="@+id/max_duration_text" />

            <Button
                android:id="@+id/register_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:layout_marginBottom="16dp"
                android:text="@string/register_button"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/scrollView5"
                app:layout_constraintStart_toStartOf="@+id/scrollView5"
                app:layout_constraintTop_toBottomOf="@+id/scrollView5" />

            <ScrollView
                android:id="@+id/scrollView5"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="@+id/pricing_text"
                app:layout_constraintStart_toStartOf="@+id/pricing_text"
                app:layout_constraintTop_toBottomOf="@+id/pricing_text">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/description_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:fontFamily="@font/delius"
                        android:hint="Deskripsi Diri"
                        android:inputType="textLongMessage|textMultiLine|textPersonName"
                        android:textAlignment="center" />
                </LinearLayout>
            </ScrollView>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/delius"
                android:text="@string/kg"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/weight_text"
                app:layout_constraintStart_toEndOf="@+id/weight_text"
                app:layout_constraintTop_toTopOf="@+id/weight_text" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="18dp"
                android:fontFamily="@font/delius"
                android:text="@string/km"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/max_distance_text"
                app:layout_constraintStart_toEndOf="@+id/max_distance_text"
                app:layout_constraintTop_toTopOf="@+id/max_distance_text" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/delius"
                android:text="@string/hr"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/max_duration_text"
                app:layout_constraintStart_toEndOf="@+id/max_duration_text"
                app:layout_constraintTop_toTopOf="@+id/max_duration_text" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/delius"
                android:text="@string/rp"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/pricing_text"
                app:layout_constraintStart_toEndOf="@+id/pricing_text"
                app:layout_constraintTop_toTopOf="@+id/pricing_text" />

            <ImageView
                android:id="@+id/info_button_max_dog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/weight_text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/weight_text"
                app:srcCompat="@drawable/ic_info" />

            <ImageView
                android:id="@+id/info_button_max_dist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_info"
                app:layout_constraintBottom_toBottomOf="@+id/max_distance_text"
                app:layout_constraintEnd_toEndOf="@+id/info_button_max_dog"
                app:layout_constraintStart_toStartOf="@+id/info_button_max_dog"
                app:layout_constraintTop_toTopOf="@+id/max_distance_text" />

            <ImageView
                android:id="@+id/info_button_max_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_info"
                app:layout_constraintBottom_toBottomOf="@+id/max_duration_text"
                app:layout_constraintEnd_toEndOf="@+id/info_button_max_dist"
                app:layout_constraintStart_toStartOf="@+id/info_button_max_dist"
                app:layout_constraintTop_toTopOf="@+id/max_duration_text" />

            <ImageView
                android:id="@+id/info_button_pricing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/pricing_text"
                app:layout_constraintEnd_toEndOf="@+id/info_button_max_duration"
                app:layout_constraintStart_toStartOf="@+id/info_button_max_duration"
                app:layout_constraintTop_toTopOf="@+id/pricing_text"
                app:srcCompat="@drawable/ic_info" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>