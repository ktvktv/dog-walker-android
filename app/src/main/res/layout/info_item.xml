<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CA888C"
    android:orientation="horizontal"
    tools:background="#CA888C">

    <ImageView
        android:id="@+id/dog_image_info"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginStart="16dp"
        android:background="#EDE7E8"
        android:foregroundGravity="center"
        android:src="@drawable/dogwalkers"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/dog_name_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="28dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/dog_image_info"
        app:layout_constraintTop_toTopOf="@+id/dog_image_info" />

    <TextView
        android:id="@+id/dog_age_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="31dp"
        android:layout_marginBottom="28dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/dog_image_info"
        app:layout_constraintStart_toEndOf="@+id/dog_image_info"
        app:layout_constraintTop_toBottomOf="@+id/dog_name_info" />

</androidx.constraintlayout.widget.ConstraintLayout>