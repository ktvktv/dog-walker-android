<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="300dp">

    <ImageView
        android:id="@+id/profile_order_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <RatingBar
        android:id="@+id/rating_bar_order"
        style="@style/Widget.AppCompat.RatingBar.Indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:isIndicator="true"
        android:numStars="5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ScrollView
        android:id="@+id/order_scroll"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toTopOf="@+id/rating_bar_order"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_order_image">

        <TextView
            android:id="@+id/description_order_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/delius"
            android:textSize="18sp"
            tools:text="Hello, my name is Kevin!" />
    </ScrollView>

    <TextView
        android:id="@+id/name_order_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/delius"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/profile_order_image"
        app:layout_constraintTop_toTopOf="@+id/profile_order_image"
        tools:text="Kevin Tigravictor" />

    <TextView
        android:id="@+id/phone_number_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/delius"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/name_order_text"
        app:layout_constraintStart_toStartOf="@+id/name_order_text"
        app:layout_constraintTop_toBottomOf="@+id/name_order_text"
        tools:text="+6281290001998"/>

    <ImageView
        android:id="@+id/next_button"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="16dp"
        android:background="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/rating_bar_order"
        app:layout_constraintStart_toEndOf="@+id/rating_bar_order"
        app:layout_constraintTop_toTopOf="@+id/rating_bar_order"
        app:srcCompat="@drawable/ic_tracker" />

</androidx.constraintlayout.widget.ConstraintLayout>