<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="user"
            type="com.example.dogwalker.data.User" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/user_picture"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/border"
                android:src="@drawable/profile_picture"
                app:layout_constraintBottom_toBottomOf="@id/phone_info_text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@drawable/profile_picture" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/info_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:nestedScrollingEnabled="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView17"
                tools:layout="@layout/info_item" />

            <TextView
                android:id="@+id/name_info_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="16dp"
                android:text="@{user.name}"
                app:layout_constraintStart_toEndOf="@+id/user_picture"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Kevin Tigravictor" />

            <TextView
                android:id="@+id/address_info_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@{user.address}"
                app:layout_constraintStart_toStartOf="@+id/name_info_text"
                app:layout_constraintTop_toBottomOf="@+id/name_info_text"
                tools:text="Jl. Barleria VI B1/H5" />

            <TextView
                android:id="@+id/birthdate_info_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@{user.birthDate}"
                app:layout_constraintStart_toStartOf="@+id/address_info_text"
                app:layout_constraintTop_toBottomOf="@+id/address_info_text"
                tools:text="09 September 1998" />

            <ImageView
                android:id="@+id/gender_info_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:layout_constraintBottom_toBottomOf="@id/nik_edit_text"
                app:layout_constraintEnd_toEndOf="@id/user_picture"
                app:layout_constraintStart_toStartOf="@id/user_picture"
                tools:srcCompat="@drawable/male_icon" />

            <TextView
                android:id="@+id/email_info_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@{user.email}"
                app:layout_constraintStart_toStartOf="@+id/birthdate_info_text"
                app:layout_constraintTop_toBottomOf="@+id/birthdate_info_text"
                tools:text="kevin.victor30@yahoo.com" />

            <TextView
                android:id="@+id/phone_info_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@{user.phoneNumber}"
                app:layout_constraintStart_toStartOf="@+id/email_info_text"
                app:layout_constraintTop_toBottomOf="@+id/email_info_text"
                tools:text="+6281290001998" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/raleway_semibold"
                android:text="Daftar Anjing"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="@id/progressBar"
                app:layout_constraintStart_toStartOf="@id/progressBar"
                app:layout_constraintTop_toBottomOf="@id/nik_edit_text" />

            <Button
                android:id="@+id/change_info_button"
                style="@style/Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:text="@string/role_button"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/info_recycler_view" />

            <TextView
                android:id="@+id/role_info_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{user.type}"
                android:textColor="@android:color/background_light"
                android:textSize="18sp"
                app:layout_constraintEnd_toStartOf="@id/textView17"
                app:layout_constraintTop_toTopOf="@id/textView17"
                tools:text="Customer" />

            <ImageView
                android:id="@+id/add_dog_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/textView17"
                app:layout_constraintStart_toEndOf="@+id/textView17"
                app:layout_constraintTop_toTopOf="@+id/textView17"
                app:srcCompat="@drawable/ic_add_circle_black_24dp" />

            <Button
                android:id="@+id/register_walker_button"
                style="@style/Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/register_button"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/update_button"
                app:layout_constraintStart_toStartOf="@id/update_button"
                app:layout_constraintTop_toBottomOf="@id/walker_registration_text" />

            <TextView
                android:id="@+id/nik_edit_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@{user.nik}"
                app:layout_constraintStart_toStartOf="@+id/phone_info_text"
                app:layout_constraintTop_toBottomOf="@+id/phone_info_text"
                tools:text="1111111111111111" />

            <TextView
                android:id="@+id/walker_registration_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/raleway_semibold"
                android:text="Mau jadi walker?"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/update_button" />

            <Button
                android:id="@+id/update_button"
                style="@style/Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="perbarui"
                app:layout_constraintEnd_toEndOf="@id/progressBar"
                app:layout_constraintStart_toStartOf="@id/progressBar"
                app:layout_constraintTop_toBottomOf="@id/info_recycler_view" />

            <ProgressBar
                android:id="@+id/progressBar"
                style="@android:style/Widget.Holo.ProgressBar.Large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/register_walker_button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</layout>